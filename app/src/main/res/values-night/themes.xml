<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Electrokinisi" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/light_blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_blue</item>
        <item name="colorSecondaryVariant">@color/light_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" >?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColorSecondary">@color/white</item>
        <item name="android:textColor">@color/white</item>
        <item name="windowNoTitle">true</item>
        <!--<item name="colorAccent">@color/white</item>-->

        <item name="alertDialogTheme">@style/DialogTheme</item>
        <!--<item name="switchStyle">@style/SwitchCompatStyle</item>-->

    </style>

    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:colorBackground">@color/blue</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="textColorAlertDialogListItem">@color/white</item>
    </style>


    <!--<style name="SwitchCompatStyle" >
        <item name="thumbTint">@color/switch_color</item>
        <item name="trackTint">@color/switch_color</item>
    </style>-->


    <style name="Theme.App.Starting" parent="Theme.SplashScreen.IconBackground">
        <!-- Set the splash screen background, animated icon, and animation duration. -->
        <item name="windowSplashScreenBackground">@color/blue</item>
<!--        <item name="windowSplashScreenIconBackgroundColor">@drawable/gradient</item>-->

        <!-- Use windowSplashScreenAnimatedIcon to add either a drawable or an
             animated drawable. One of these is required. -->



        <!--<item name="windowSplashScreenAnimatedIcon">@drawable/avd_anim</item>-->


        <!--<item name="windowSplashScreenAnimationDuration">5000</item>-->

        <!-- Set the theme of the Activity that directly follows your splash screen. -->
        <!-- Required -->
        <item name="postSplashScreenTheme">@style/Theme.Electrokinisi</item>
    </style>

</resources>