<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_margin="2dp">

    <!--CardView that holds the elements
        of the child RecyclerView -->
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#CCCDCF"
        app:cardCornerRadius="10dp">


        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="3dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="1dp"
                android:layout_marginEnd="1dp"
                android:orientation="vertical">


                <LinearLayout
                    android:id="@+id/linear4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/connector_image"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_connector_ccs_typ1" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/connector_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Type 2"
                            android:textColor="@color/black"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/connector_full_type"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"

                            android:text="IEC 62196-2"
                            android:textColor="@color/black"
                            android:textSize="9sp" />
                    </LinearLayout>

                    <com.google.android.material.divider.MaterialDivider
                        android:layout_width="1dp"
                        android:layout_height="fill_parent"
                        android:layout_marginHorizontal="1dp"

                        />


                    <TableLayout
                        android:id="@+id/table1"
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"

                        android:gravity="center"
                        android:paddingHorizontal="3dp"
                        android:paddingVertical="2dp"
                        android:shrinkColumns="*"
                        android:stretchColumns="1,0"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_marginBaseline="3dp">

                        <TableRow
                            android:id="@+id/header_tabeli"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/connector_power"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="1200"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Watt"
                                android:textColor="@color/black"
                                android:textSize="12sp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/connector_volt"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="150"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Volt"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </TableRow>

                        <TableRow>

                            <TextView
                                android:id="@+id/connector_amp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="20"
                                android:textColor="@color/black"
                                android:textSize="12sp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:text="Amp"
                                android:textColor="@color/black"
                                android:textSize="12dp" />
                        </TableRow>
                    </TableLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="2dp"
                            android:text="Μέθοδος"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-3sp"
                            android:paddingHorizontal="2dp"
                            android:text="Φόρτισης"
                            android:textAlignment="center"
                            android:textColor="@color/black"
                            android:textSize="10sp" />

                    </LinearLayout>

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="2sp"
                        android:gravity="center_vertical"
                        android:text="AC_THREE_PHASE"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="2dp"
                        android:text="Last Update"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <TextView
                        android:id="@+id/connector_last_updated_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="2dp"
                        android:text="29-09-2021"
                        android:textColor="@color/black"
                        android:textSize="9sp" />

                    <!--<TextView
                        android:id="@+id/connector_last_updated_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingHorizontal="2dp"
                        android:text="13:42"
                        android:textColor="@color/black"
                        android:textSize="9sp" />-->


                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>

</FrameLayout>
